{
  "name": "@playht/playht",
  "version": "0.0.4",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "restricted"
  },
  "description": "NodeJS SDK for PlayHT generative AI text-to-speech APIs",
  "files": [
    "dist",
    "package.json"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "repository": "https://github.com/playht/playht-nodejs-sdk",
  "license": "MIT",
  "scripts": {
    "build:cjs": "tsc --emitDeclarationOnly --outdir dist/cjs && esbuild src/index.ts --bundle --platform=node --format=cjs --outdir=dist/cjs",
    "build:esm": "tsc --emitDeclarationOnly --outdir dist/esm && esbuild src/index.ts --bundle --platform=node --format=esm --outdir=dist/esm",
    "build": "rm -rf ./dist && yarn build:cjs && yarn build:esm",
    "test": "jest",
    "lint": "prettier --write . && eslint --ext .ts ./src --fix && tsc --noEmit",
    "verify": "yarn check && yarn test",
    "check": "tsc --noEmit && prettier --check . && eslint --ext .ts ./src",
    "release": "yarn && yarn build && npm publish"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.4",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.6.3",
    "prettier": "3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "packageManager": "yarn@3.6.2",
  "dependencies": {
    "axios": "^1.4.0",
    "file-type": "^18.5.0"
  }
}
